{
  "name": "@vizuaalog/bulmajs",
  "version": "0.4.0",
  "description": "Unofficial javascript extension to the awesome Bulma CSS framework.",
  "main": "src/bulma.js",
  "author": "Thomas Erbe <vizuaalog@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "bulma": "^0.6.2",
    "chai": "4.1.2",
    "chai-spies": "^1.0.0",
    "eslint": "^4.19.0",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chai-spies": "^0.1.4",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "mocha": "^5.0.4",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10",
    "webpack-glob-entry": "^2.1.1"
  },
  "scripts": {
    "docs-js": "npm run dev && rm -rf docs/assets/js/bulmajs && mkdir -p docs/assets/js/bulmajs && cp dist/* docs/assets/js/bulmajs",
